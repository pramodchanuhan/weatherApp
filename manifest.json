{
    "manifest_version": 2,
    "name": "Weather App",
    "version": "3.0",
    "description": "A simple weather app built with React",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "storage",
      "geolocation"
    ]
  }
  